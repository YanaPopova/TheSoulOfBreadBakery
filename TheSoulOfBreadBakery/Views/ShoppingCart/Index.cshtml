@model ShoppingCartViewModel
@using System.Globalization 

<h2>Your shopping cart</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Selected amount</th>
            <th>Bread</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
        <tr>
            <td class="text-center">@line.Amount</td>

            <td class="text-left">@line.Bread.Name</td>
            <td class="text-right">@line.Bread.Price.ToString("c", CultureInfo.CreateSpecificCulture("fr-FR"))</td>
            <td class="text-right">@((line.Amount * line.Bread.Price).ToString("c", CultureInfo.CreateSpecificCulture("fr-FR")))</td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">@Model.ShoppingCartTotal.ToString("c", CultureInfo.CreateSpecificCulture("fr-FR"))</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Order</a>
</div>
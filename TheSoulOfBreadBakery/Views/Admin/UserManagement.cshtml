@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>

<h2>User management</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
}
else
{
    <table class="table table-condensed table-bordered" header header-content="User Management">
        <tr>
            <th>User ID</th>
            <th>User name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>

        @foreach (ApplicationUser user in Model)
        {
            <tr>
                <th>@user.Id</th>
                <th>@user.UserName</th>
                <th>@user.Email</th>

                <th>
                    <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                </th>
            </tr>
        }
    </table>
}

<p>
    @*<a class="btn btn-primary" asp-action="AddUser">Add new user</a>*@
    <a anchor-style="primary" asp-action="AddUser">Add new user</a>
</p>